<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.funflash">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunFlash">
        <activity android:name="com.example.funflash.ResultsSave"></activity>
        <activity android:name="com.example.funflash.FlashcardActivity" />

        <activity
            android:name="com.example.funflash.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.FunFlash.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.funflash.TestActivity"
            android:label="@string/quiz_name"
            android:theme="@style/Theme.FunFlash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>